# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.ts]
indent_size = 2
quote_type = single

[*.tsx]
indent_size = 2
quote_type = single

[*.js]
indent_size = 2
quote_type = single

[*.jsx]
indent_size = 2
quote_type = single

[*.json]